@{
}

@model DailyWorkoutViewModel

<div>
    <form asp-action="All" asp-controller="Workout">
        <input placeholder="yyyy-mm-dd" name="date" type="date" />
        <input type="submit" style="color: red" value="Submit" />
    </form>
    @foreach (var set in Model.Sets)
    {
        <form asp-controller="Workout" asp-action="Delete" method="post">
            <p>@set.ExerciseName</p>
            <p>Rep Count: @set.RepCount</p>
            <p>Weight: @set.Weight</p>
            <input type="submit" style="color: red" value="Delete" />
            <input type="hidden" name="setId" value=@set.Id />
            <hr />
        </form>
    }
</div>