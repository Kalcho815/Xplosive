@{
}
@section Styles{

    <link rel="stylesheet" href="~/css/workout-add.css" />

}

@model DailyNutritionViewModel
<partial name="_Nav" >

<div class="form-wrapper">
  <div class="form-container">
     <form asp-action="All" asp-controller="Nutrition">
        <input placeholder="yyyy-mm-dd" name="date" type="date" />
        <input type="submit" style="color: red" value="Submit" />
    </form>
    @foreach (var food in Model.Foods)
    {
        <form asp-controller="Workout" asp-action="Delete" method="post">
            <p>@food.Name</p>
            <p>Calories: @food.Energy kcal.</p>
            <p>Carbs: @food.Carbohydrates g.</p>
            <p>Fat: @food.Fat g.</p>
            <p>Protein: @food.Protein g.</p>
            <p>Sugar: @food.CarbohydratesSugar g.</p>
            <input type="submit" style="color: red" value="Delete" />
            <input type="hidden" name="setId" value=@food.Id />
            <hr />
        </form>
        
    }
  </div>
   
</div>